{
  "name": "@playkit-js/kaltura-player-js",
  "version": "3.15.2",
  "keywords": [
    "kaltura",
    "player",
    "html5 player"
  ],
  "homepage": "https://github.com/kaltura/kaltura-player-js",
  "bugs": {
    "url": "https://github.com/kaltura/kaltura-player-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kaltura/kaltura-player-js"
  },
  "license": "AGPL-3.0",
  "main": "./dist/kaltura-ovp-player.js",
  "module": "./dist/kaltura-ovp-player.mjs",
  "types": "./dist/kaltura-player-js.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "serve:ovp": "webpack serve --open --mode development --env playerType=ovp",
    "watch:ovp": "webpack --watch --mode development --env playerType=ovp",
    "build:ovp": "webpack --mode production --env playerType=ovp",
    "serve:ott": "webpack serve --open --mode development --env playerType=ott",
    "watch:ott": "webpack --watch --mode development --env playerType=ott",
    "build:ott": "webpack --mode production --env playerType=ott",
    "clean": "rm -rf dist/*",
    "build": "yarn run clean && yarn run build:ovp && yarn run build:ott && yarn run build:types",
    "build:types": "tsc --build tsconfig-lib.json && mkdir -p lib && api-extractor run --local",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "test": "karma start karma.conf.js",
    "test:debug": "DEBUG_UNIT_TESTS=1 karma start karma.conf.js --auto-watch --no-single-run --browsers Chrome",
    "test:watch": "karma start karma.conf.js --auto-watch --no-single-run",
    "lint": "eslint src/ tests/ --ext .js --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write .",
    "pushTaggedRelease": "git push --follow-tags --no-verify origin master",
    "release": "standard-version"
  },
  "dependencies": {
    "@playkit-js/playkit-js": "0.82.7",
    "@playkit-js/playkit-js-dash": "1.35.0",
    "@playkit-js/playkit-js-hls": "1.32.8",
    "@playkit-js/playkit-js-providers": "2.39.5",
    "@playkit-js/playkit-js-ui": "0.77.7",
    "hls.js": "1.4.11",
    "shaka-player": "4.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@babel/runtime": "^7.23.1",
    "@microsoft/api-extractor": "^7.38.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint-plugin-mocha": "^10.2.0",
    "babel-loader": "^9.1.3",
    "chai": "^4.3.6",
    "chalk": "4.1.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "6.8.1",
    "eslint": "8.22.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.3",
    "sinon": "^14.0.0",
    "sinon-chai": "latest",
    "standard-version": "^9.5.0",
    "style-loader": "3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "standard-version": {
    "scripts": {
      "precommit": "tmp=$(npm run build:ovp && yarn run build:ott)"
    }
  }
}
